# MCP Orchestrator Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=production

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# Container Registry
ACR_LOGIN_SERVER=mcpautomationacr.azurecr.io
ACR_USERNAME=your-acr-username
ACR_PASSWORD=your-acr-password

# MCP Server Configuration
GITHUB_MCP_PORT=3001
PYATS_MCP_PORT=3002
SERVICENOW_MCP_PORT=3003
EMAIL_MCP_PORT=3004
NETBOX_MCP_PORT=3005

# Network Configuration
NETWORK_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_DELAY=5000

# Workflow Configuration
WORKFLOW_EXECUTION_TIMEOUT=300000
WORKFLOW_CLEANUP_INTERVAL=3600000

# Notification Configuration
NOTIFICATION_RETENTION_DAYS=30
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Security Configuration
JWT_SECRET=your-jwt-secret-key
CORS_ORIGIN=http://localhost:3000,https://mcp-frontend-app.azurewebsites.net

# Redis Configuration (for caching and session management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090 